@using GalvantMVC2.Application.ViewModels.Tasks

@model IEnumerable<TasksSearchResultVm>

@foreach (TasksSearchResultVm result in Model)
{
    <tr>
        <td style="width:15%">@result.Type</td>        
        <td style="width:15%">@result.Location2</td>
        <td style="width:15%">@result.Status</td>
        <td style="width:15%">@result.Tag</td>
        <td style="width:15%">@result.DueDate</td>
        <td style="width:15%">@result.Title</td>

        <td style="width:15%">            
            <a href="#" class="delete-file upload-link">
                <i class="options-link fa-solid fa-trash list-trash" title="Usuń" data-fileid="@result.TaskId"></i>
            </a>
        </td>
    </tr>
}
    